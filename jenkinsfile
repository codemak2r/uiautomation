pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:15.10.0-alpine3.10'
                    args '--net=host -u root'
                    reuseNode true
                }
            }
            steps {
                echo 'Building..'
                sh "npm install -y"
                sh "npx run codeceptjs --steps"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
