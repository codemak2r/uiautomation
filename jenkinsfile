pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image: 'codeception/codeceptjs'
                    args: '-v $PWD:/tests --net=host'
                    reuseNode: true
                }
            }
            steps {
                echo 'Building..'
                sh "codeceptjs run --steps"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
