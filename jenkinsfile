pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'codeception/codeceptjs'
                    args '--net=host --entrypoint='''
                    reuseNode true
                }
            }
            steps {
                echo 'Building..'
                sh "codeceptjs run --steps"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
